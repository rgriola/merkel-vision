# Database (MySQL - local or cloud)
# For local development, use root without password (as installed via Homebrew)
DATABASE_URL="mysql://root@localhost:3306/google_search_me"

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="placeholder-change-in-env-local"

# Google Maps API Key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key-here"

# ImageKit
IMAGEKIT_PUBLIC_KEY="your-imagekit-public-key"
IMAGEKIT_PRIVATE_KEY="your-imagekit-private-key"
IMAGEKIT_URL_ENDPOINT="your-imagekit-url"

# Email Configuration
EMAIL_SERVICE="mailtrap"
EMAIL_HOST="sandbox.smtp.mailtrap.io"
EMAIL_PORT="2525"
EMAIL_USER="your-mailtrap-username"
EMAIL_PASS="your-mailtrap-password"
EMAIL_MODE="development"
EMAIL_FROM_NAME="Google Maps Search"
EMAIL_FROM_ADDRESS="noreply@example.com"

# Application URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"
